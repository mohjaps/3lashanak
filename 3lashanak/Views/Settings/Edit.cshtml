@model _3lashanak.Models.Settings

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Settings</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id" type="hidden" class="form-control" />
                <input asp-for="Key" type="hidden" class="form-control" />
                <input asp-for="Type" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <h1>@Model.Key</h1>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">العنوان</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Value" class="control-label">الوصف</label>
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            @if (Model.Type == TypeSettings.Text)
            {
                <div class="form-group">
                    <label asp-for="Icon" class="control-label">اللوغو</label>
                    <input asp-for="Icon" class="form-control" />
                    <span asp-validation-for="Icon" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="حفظ" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">عودة للرئيسية</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
