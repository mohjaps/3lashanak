@model _3lashanak.Models.Settings

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Settings</h4>
    <hr />



    <dl class="row">
        <dt class = "col-sm-2">
            لاسم
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Key)
        </dd>
        <dt class = "col-sm-2">
            النص 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            القيمة
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Value)
        </dd>

        @if(Model.Type != TypeSettings.Button)
        {
            <dt class = "col-sm-2">
                اللوقو
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Icon)
            </dd>
        }
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new {  id = Model.Id}) |
    <a asp-action="Index">Back to List</a>
</div>
