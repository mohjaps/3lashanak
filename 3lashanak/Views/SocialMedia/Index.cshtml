@model IEnumerable<_3lashanak.Models.SocialMedia>

@{
    ViewData["Title"] = "مواقع التواصل";
}

<h1>مواقع التواصل</h1>

<p>
    <a asp-action="Create">>  اضافة</a>>
</p>
<table class="table table-striped table-dark table-bordered text-sm-center">
    <thead>
        <tr>
            <th>
                العنوان
            </th>
            <th>
               الشعار
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                 <img src="@item.Logo" asp-append-version="true" width="100"/>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">تعديل</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">التفاصيل</a> |
                <a asp-action="Delete" asp-route-id="@item.Id"class="btn btn-outline-danger">حذف</a>
            </td>
        </tr>
}
    </tbody>
</table>
