@model IEnumerable<_3lashanak.Models.ServicePackeges>

@{
    ViewData["Title"] = "خدمات الباقات<";
}

<h1>خدمات الباقات</h1>

<p>
    <a asp-action="Create">جديد</a>
</p>
<table class="table table-striped table-bordered text-center">
    <thead>
        <tr>
            <th>
                الخدمة
            </th>
            <th>
                الباقة
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if(Model is not null)
            @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Service)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Packages.Description)
                        </td>
                        <td>
                            <a asp-action="تعديل" asp-route-id="@item.Id" class="btn btn-outline-primary">تعديل</a> |
                            <a asp-action="حذف" asp-route-id="@item.Id" class="btn btn-outline-danger">حذف</a>
                        </td>
                    </tr>
            }
    </tbody>
</table>
