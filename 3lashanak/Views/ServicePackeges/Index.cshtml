@model IEnumerable<_3lashanak.Models.ServicePackeges>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped table-bordered text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Service)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Packages)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if(Model is not null)
            @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Service)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Packages.Description)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">تعديل</a> |
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">تفاصيل</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">حذف</a>
                        </td>
                    </tr>
            }
    </tbody>
</table>
