@model IEnumerable<_3lashanak.Models.Messages>

@{
    ViewData["Title"] = "الرسائل";
}

<h1>Index</h1>


<table class="table table-striped table-bordered text-sm-center">
    <thead style="width:300px!important">
        <tr>
            <th>
                الاسم
            </th>
            <th>
                الايميل
            </th>
            <th>
                رقم الجوال
            </th>
            <th>
                الموضوع
            </th>
            <th>
                تاريخ الارسال
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SendDate)
            </td>
            <td>
                @Html.ActionLink("التفاصيل", "Details", new {  id=item.Id },new {@class="btn btn-outline-primary"}) |
                @Html.ActionLink("حذف", "Delete", new { id=item.Id  },new {@class="btn btn-outline-danger"})
            </td>
        </tr>
}
    </tbody>
</table>
